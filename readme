y# Krok 1 - pridaj kľúč
sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-key F6E65AC044F831AC80A06380C8B3A55A6F3EFCD

# Krok 2 - pridaj repozitár
sudo add-apt-repository "deb https://librealsense.intel.com/Debian/apt-repo focal main"

# Krok 3 - aktualizuj a nainštaluj
sudo apt update
sudo apt install -y librealsense2-utils librealsense2-dev python3-librealsense